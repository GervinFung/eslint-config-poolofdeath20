{
	"extends": "./base.json",
	"compilerOptions": {
		// language and environment
		"target": "es6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"jsx": "preserve",

		// modules
		"moduleResolution": "node",

		// interop constraints
		"isolatedModules": true,

		// projects
		"incremental": true,

		// output formatting
		"preserveWatchOutput": true,

		// emit
		"outDir": ".tscache"
	}
}
