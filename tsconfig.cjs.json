{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "verbatimModuleSyntax": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "build",
        "target": "es5",
        "noEmit": false,
        "declaration": true,
        "declarationMap": false,
        "sourceMap": true
    },
    "include": ["src"]
}
