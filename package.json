{
    "name": "@poolofdeath20/lint-format",
    "description": "My eslint and prettier util",
    "version": "0.2.0",
    "license": "MIT",
    "exports": {
        "./react": {
            "require": "./build/cjs/react/index.js",
            "import": "./build/mjs/react/index.js"
        },
        "./node": {
            "require": "./build/cjs/node/index.js",
            "import": "./build/mjs/node/index.js"
        }
    },
    "bin": {
        "lint-format": "./build/cjs/bin.js"
    },
    "scripts": {
        "lint": "vite-node src/bin/index.ts --  lint",
        "format-write": "vite-node src/bin/index.ts --  format --write",
        "format-check": "vite-node src/bin/index.ts --  format --check",
        "build-mjs": "tsc -p tsconfig.mjs.json && ts-add-js-extension add --dir=build/mjs",
        "build-cjs": "tsc -p tsconfig.cjs.json && pnpm postbuild-cjs",
        "postbuild-cjs": "vite-node script/cjs-module-exports.ts",
        "build": "rm -rf build && pnpm build-cjs && pnpm build-mjs && node-package-helper && pnpm postbuild",
        "postbuild": "shx chmod +x build/cjs/bin/index.js",
        "test": "vitest"
    },
    "dependencies": {
        "@types/eslint": "^8.44.2",
        "@types/node": "^18.17.3",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "node-package-helper": "github:GervinFung/node-package-helper",
        "prettier": "^3.0.1",
        "shx": "^0.3.4",
        "ts-add-js-extension": "^1.5.8",
        "typescript": "^4.9.5",
        "vite-node": "^0.34.1",
        "vitest": "^0.24.5"
    },
    "devDependencies": {
        "eslint": "^8.46.0"
    },
    "peerDependencies": {
        "@typescript-eslint/eslint-plugin": "*",
        "@typescript-eslint/parser": "*",
        "eslint": ">=8",
        "eslint-plugin-import": "*",
        "eslint-plugin-jsx-a11y": "*",
        "eslint-plugin-react": "*"
    }
}
