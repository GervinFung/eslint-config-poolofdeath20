{
	"name": "poolofdeath20",
	"description": "My NPM tools",
	"license": "MIT",
	"scripts": {
		"lint": "eslint . --ignore-path .gitignore --ext .ts --color",
		"format": "pnpm prettier --ignore-path .gitignore **/*.{js,cjs,ts,json,md}",
		"format-write": "pnpm format --write",
		"format-check": "pnpm format --check",
		"build-prettier": "cd packages/prettier-config && pnpm build",
		"build-eslint": "cd packages/eslint-config && pnpm build",
		"build": "pnpm build-eslint && pnpm build-prettier",
		"test": "vitest"
	},
	"devDependencies": {
		"@types/eslint": "^8.44.2",
		"@types/node": "^18.17.3",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"eslint": "^8.46.0",
		"prettier": "^3.0.1",
		"shx": "^0.3.4",
		"ts-add-js-extension": "^1.5.8",
		"typescript": "^5.1.6",
		"vite-node": "^0.34.1",
		"vitest": "^0.24.5"
	}
}
